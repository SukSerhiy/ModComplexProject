@model WorkWithDb.Sprav_Objects

<head>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/forms.css" rel="stylesheet" type="text/css" />
    <script type="text/javascript">
        var myUrl = '@Url.Content("~/References/ObjectsReference")';
    </script>
    <script src='@Url.Content("~/Scripts/jquery-1.12.4.min.js")' type="text/javascript"></script>
    <script src="~/Scripts/ModComplex/updatingData.js" type="text/javascript"></script>
</head>
<body>
    @Html.Partial("SavingToDbResult")
    <div class="container">
        <div class="row">
            <div class="col-md-6"></div>
            <div class="col-md-6">
                <h3>Учетная карта объектов</h3>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12" id="tableContainer">
                        @Html.Partial("Table", ViewData["Table"])
                    </div>
                    <div class="col-md-12" id="updateDbContainer">
                        <button type="button" class="btn btn-default btn-md btn-block" id="updateDB">Сохранить изменения в БД</button>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-12" id="formContainer">
                        <form>
                            @Html.HiddenFor(m => m.Id_obj, new { id = "Id" })
                            <div class="row">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Class_obj, "Класс объекта", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Class_obj, null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Vid_obj, "Вид объекта", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Vid_obj, null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Type_obj, "Тип объекта", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Type_obj, null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Symbol_id, "Название", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextBoxFor(m => m.Symbol_id, null, new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group">
                                    @Html.LabelFor(m => m.Descr, "Описание", new { @class = "col-sm-2 control-label" })
                                    <div class="col-sm-10">
                                        @Html.TextAreaFor(m => m.Descr, new { @class = "form-control", @cols = 45, @rows = 10 })
                                    </div>
                                </div>
                            </div>
                            @Html.Partial("ButtonPanel")
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
